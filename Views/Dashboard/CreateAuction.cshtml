@model AuctionView

<div class="container">
    <div class="row">
        <div class="navbar-default">
            <h1>New Auction</h1>
            <a href="/dashboard">Dashboard</a>
            <a href="/logout">Logout</a>
        </div>
        <form method="post" asp-controller="Dashboard" asp-action="CreateAuction">
            <div class="form-group">
                <label asp-for="product_name"></label>
                <span asp-validation-for="product_name"></span>
                <input class="form-control" asp-for="product_name">
            </div>
            <div class="form-group">
                <label asp-for="description"></label>
                <span asp-validation-for="description"></span>
                <input class="form-control" asp-for="description">
            </div>
            <div class="form-group">
                <label asp-for="starting_bid"></label>
                <span asp-validation-for="starting_bid"></span>
                <input class="form-control" asp-for="starting_bid">
            </div>
            <div class="form-group">
                <label asp-for="end_date"></label>
                <span asp-validation-for="end_date"></span>
                <input class="form-control" asp-for="end_date">
            </div>
            <input type="submit" value="Create Auction">
        </form>
    </div>
</div>
